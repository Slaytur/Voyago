{
    "extends": "./tsconfig.json",
    "include": [
        "src/**/*.ts",
        "src/**/*.svelte",
        "tests/**/*.ts",
        "tests/**/*.svelte",
        "prisma/**/*.ts",
        "svelte-kit/ambient.d.ts",
        "svelte-kit/non-ambient.d.ts",
        "svelte-kit/types/**/$types.d.ts",
        "eslint.config.js",
        "playwright.config.ts",
        "postcss.config.js",
        "stylelint.config.js",
        "svelte.config.js",
        "tailwind.config.ts",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "src/service-worker.ts",
        "src/service-worker.d.ts",
        "src/service-worker/**/*.ts",
        "src/service-worker/**/*.d.ts"
    ]
}
