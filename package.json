{
	"name": "sveltestarter",
	"version": "0.0.1",
	"type": "module",
	"private": true,
	"prisma": {
		"seed": "ts-node prisma/seed.ts"
	},
	"scripts": {
		"build": "bun --bun vite build",
		"dev": "bun --bun vite dev",
		"preview": "bun --bun vite preview",
		"start": "bun --bun ./build/index.js",
		"check": "bun --bun svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bun --bun svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "bun --bun eslint . --fix",
		"lint:css": "bun --bun stylelint .",
		"lint:ci": "bun --bun eslint .",
		"test": "bun --bun bun test:integration && bun test:unit",
		"test:integration": "bun --bun playwright test",
		"test:unit": "bun --bun vitest"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^5.1.0",
		"@neoconfetti/svelte": "^2.2.1",
		"@playwright/test": "^1.48.2",
		"@stylistic/eslint-plugin": "^2.10.1",
		"@sveltejs/kit": "^2.7.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@types/bcryptjs": "^2.4.6",
		"@types/bun": "^1.1.13",
		"@types/eslint": "^9.6.1",
		"autoprefixer": "^10.4.20",
		"bcryptjs": "^2.4.3",
		"clsx": "^2.1.1",
		"eslint": "^9.14.0",
		"eslint-plugin-svelte": "^2.46.0",
		"globals": "^15.11.0",
		"postcss": "^8.4.47",
		"stylelint": "^16.10.0",
		"stylelint-config-standard-scss": "^13.1.0",
		"svelte": "^5.1.9",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-check": "^4.0.5",
		"svelte-meta-tags": "^4.0.4",
		"tailwind-merge": "^2.5.4",
		"tailwind-variants": "^0.2.1",
		"tailwindcss": "^3.4.14",
		"ts-node": "^10.9.2",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.12.2",
		"vite": "^5.4.10",
		"vite-plugin-image-optimizer": "^1.1.8",
		"vitest": "^2.1.4"
	},
	"dependencies": {
		"@auth/prisma-adapter": "^2.7.2",
		"@auth/sveltekit": "^1.7.2",
		"@lucia-auth/adapter-prisma": "^4.0.1",
		"@prisma/adapter-pg": "^5.21.1",
		"@prisma/client": "^5.21.1",
		"axios": "^1.7.7",
		"bits-ui": "^0.21.16",
		"framer-motion": "^11.11.11",
		"gsap": "^3.12.5",
		"lucia": "^3.2.2",
		"lucide-svelte": "^0.454.0",
		"node-appwrite": "^14.1.0",
		"pg": "^8.13.1",
		"prisma": "^5.21.1",
		"svelte-french-toast": "^1.2.0",
		"uuid": "^11.0.2"
	}
}
